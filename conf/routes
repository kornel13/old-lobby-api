# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index
GET     /user                       controllers.HomeController.listUsers
POST    /user                       controllers.HomeController.addUser
DELETE  /user                       controllers.HomeController.removeUser

# DEBUG
GET     /table                      controllers.HomeController.listTables
POST    /table                      controllers.HomeController.addTable
DELETE  /table                      controllers.HomeController.removeTable
PATCH   /table                      controllers.HomeController.updateTable

GET     /lobby-api                  controllers.HomeController.ws

# Get evolution script based on repositories
GET     /evolution                 controllers.HomeController.evolution

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
